<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>


    </item>


    <item android:bottom="6dp" android:left="6dp" android:right="6dp" android:state_pressed="true" android:top="6dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="@color/colorPrimaryDarkDim" />
        </shape>

    </item>


